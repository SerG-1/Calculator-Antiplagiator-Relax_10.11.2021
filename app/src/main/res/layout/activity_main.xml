<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tablo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:maxLines="4"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button1"

            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z1" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z2" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z4" />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z5" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z7" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z8" />

        <ImageButton
            android:id="@+id/button9"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/z9" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="136dp"
            android:layout_marginRight="136dp"
            android:gravity="center"


            android:src="@drawable/z0"
            android:text="0" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/equals"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:text="="
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/divide"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/minus"
            app:layout_constraintTop_toBottomOf="@+id/mult" />

        <Button
            android:id="@+id/mult"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"

            android:text="x"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/minus"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/divide"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="5dp"
            android:text="รท"
            android:textAlignment="center"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/clear"
            app:layout_constraintStart_toEndOf="@+id/reset" />

        <Button
            android:id="@+id/minus"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="1dp"
            android:text="-"
            android:textAlignment="center"
            android:textSize="28dp"
            app:layout_constraintBottom_toTopOf="@+id/reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/plus"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="1dp"
            android:text="+"
            android:textAlignment="center"
            android:textSize="28dp"
            app:layout_constraintBottom_toTopOf="@+id/clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/reset"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="40dp"
            android:text="CE"
            android:textAlignment="center"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/clear"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:text="C"
            android:textAlignment="center"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>


